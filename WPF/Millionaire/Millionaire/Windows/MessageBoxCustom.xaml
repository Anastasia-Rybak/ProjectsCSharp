<Window x:Class="Millionaire.MessageBoxCustom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ошибка" Height="150" Width="300" FontFamily="Times New Roman" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Icon="/Millionaire;component/Resources/maxresdefault.jpg">
    <Grid Background="Black">
        <Label Margin="5" >
            <Label.Foreground>
                <SolidColorBrush Color="{DynamicResource TextColor}"/>
            </Label.Foreground>
            <Label.Content>
                <TextBlock x:Name="Message" TextWrapping="Wrap" FontFamily="Times New Roman" FontSize="14" Margin="5"/>
            </Label.Content>
        </Label>
    </Grid>
</Window>